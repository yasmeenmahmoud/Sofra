<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gridview_drawable"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/C_commentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="خليل اليزيدى"
            android:textSize="15sp" />

        <RatingBar
            android:id="@+id/C_conmmentrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:progressDrawable="@mipmap/ratingbarsmall" />

        <TextView
            android:id="@+id/C_conmmentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/C_conmmentrating"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-25dp"
            android:text="19 نوفمبر 2011"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/C_conmmentcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/C_conmmentdate"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:text="عروض ممتازه واداء اكثر من الرائع ويت التوصيل للزبون فى الوقت المحدد "
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>